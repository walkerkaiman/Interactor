{
  "server": {
    "port": 3001,
    "host": "0.0.0.0"
  },
  "logging": {
    "level": "info",
    "file": "logs/interactor.log",
    "maxSize": "10m",
    "maxFiles": 5
  },
  "modules": {
    "autoLoad": true,
    "scanInterval": 5000,
    "hotReload": true
  },
  "interactions": {
    "autoSave": true,
    "saveInterval": 30000,
    "backupCount": 5
  },
  "security": {
    "enableAuth": false,
    "rateLimit": {
      "windowMs": 15 * 60 * 1000,
      "max": 100
    }
  }
} 