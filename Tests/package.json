{
  "name": "interactor-tests",
  "version": "1.0.0",
  "description": "Test suite for Interactor V2 Backend",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:verbose": "VITEST_VERBOSE=true vitest run",
    "integration": "vitest run integration/",
    "integration:watch": "vitest --watch integration/",
    "integration:coverage": "vitest --coverage integration/",
    "integration:verbose": "VITEST_VERBOSE=true vitest run integration/",
    "integration:runner": "ts-node --esm integration/run-integration-tests.ts",
    "test:unit": "vitest run unit/",
    "test:unit:watch": "vitest --watch unit/",
    "test:unit:coverage": "vitest --coverage unit/",
    "test:all": "npm run test:unit && npm run integration",
    "test:all:coverage": "npm run test:unit:coverage && npm run integration:coverage",
    "test:backend": "vitest run BackendIntegration.test.ts",
    "test:routing": "vitest run MessageRouting.test.ts",
    "test:modules": "vitest run ModuleLifecycle.test.ts",
    "test:api": "vitest run APIWebSocket.test.ts",
    "test:report": "npm run test:all:coverage && open coverage/index.html",
    "test:clean": "rm -rf coverage test-results.json test-*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "reactflow": "^11.10.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@interactor/shared": "file:../shared",
    "@types/fs-extra": "^11.0.4",
    "@types/multer": "^2.0.0",
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "fs-extra": "^11.1.1",
    "helmet": "^7.1.0",
    "multer": "^2.0.2",
    "reactflow": "^11.10.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  }
}
